{
  "name": "kerst-naamtrekker-app",
  "private": true,
  "version": "1.0.54",
  "main": "electron/main.js",
  "scripts": {
    "start:backend": "node backend/server.js",
    "start:frontend": "npm --prefix frontend run dev",
    "start": "npm-run-all --parallel start:backend start:frontend",
    "build:frontend": "npm --prefix frontend run build",
    "dev:desktop": "npm-run-all --parallel start:backend start:frontend electron:start",
    "electron:start": "cross-env NODE_ENV=development electron .",
    "bundle:backend": "node scripts/bundle-backend.js",
    "build:desktop": "npm run build:frontend && npm run bundle:backend && electron-builder --win --x64",
    "build:desktop:inc": "npm version patch --no-git-tag-version && npm run build:desktop"
  },
  "dependencies": {
    "node-mailjet": "^6.0.11",
    "wait-on": "^7.2.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "electron": "^31.3.0",
    "electron-builder": "^24.13.3",
    "esbuild": "^0.23.1",
    "npm-run-all": "^4.1.5",
    "png-to-ico": "^3.0.1",
    "to-ico": "^1.1.5"
  },
  "build": {
    "appId": "be.paul.kerstnaamtrekker",
    "productName": "Kerst Naamtrekker",
    "asar": true,
    "asarUnpack": [
      "backend/**"
    ],
    "directories": {
      "output": "dist-desktop9"
    },
    "files": [
      "electron/**/*",
      "frontend/dist/**/*",
      "package.json",
      "backend/dist/server.bundle.cjs",
      "backend/.env*",
      "backend/db.json"
    ],
    "extraResources": [
      {
        "from": "backend/db.json",
        "to": "app-data/db.json"
      }
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "artifactName": "Kerst-Naamtrekker-Setup-${version}.exe",
      "icon": "build/icons/app.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Kerst Naamtrekker"
    }
  }
}
